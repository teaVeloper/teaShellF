[include]
    path = ~/dotfiles/.private/git.user.conf

[credential]
    helper = cache --timeout 7200000

[merge]
    tool = fugitive
[mergetool]
    prompt = false
[mergetool "nvim"]
    cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"
[mergetool "fugitive"]
    cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"

[core]
    editor = nvim
    excludesfile = ./ignore

[difftool]
    prompt = true
[diff]
    tool = nvimdiff
	colorMoved = zebra
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    features = line-numbers decorations
    whitespace-error-style = 22 reverse

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none

[alias]
    ; Abbreviations
    s = status
    d = diff
    dt = difftool
    sw = switch
    a = add
    c = commit
    c = commit --verbose
    m = merge
    mt = mergetool
    co = checkout
    cob = checkout -b
    br = branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate
    ; l = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
    ; Log
    l = !git log --pretty=format:\"%C(magenta)%h %ad%Creset -%C(red)%d%Creset %s %C(dim green)(%cr) [%an]\" --decorate --date=short --abbrev-commit
    ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    ; Own functions
    la = "!git config -l | grep alias | cut -c 7- " ; list aliases
    done = !git push origin HEAD
    dune = !git push upstream HEAD
    base-path = "rev-parse --show-toplevel"
    ctags = !.git/hooks/ctags
    au = !git add $(git ls-files -o --exclude-standard)
[help]
	autocorrect = 20

[init]
	; templatedir = ~/dotfiles/git/git_template
	defaultBranch = main

[pull]
	rebase = true
[commit]
	verbose = true
